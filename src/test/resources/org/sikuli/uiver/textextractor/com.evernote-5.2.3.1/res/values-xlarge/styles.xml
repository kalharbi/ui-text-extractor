<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PopUpActivity" parent="@*android:style/Theme">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowEnterAnimation">@anim/grow_fade_in_center</item>
        <item name="android:windowExitAnimation">@anim/shrink_fade_out_center</item>
        <item name="android:activityOpenEnterAnimation">@anim/grow_fade_in_center</item>
        <item name="android:activityOpenExitAnimation">@anim/shrink_fade_out_center</item>
        <item name="android:activityCloseEnterAnimation">@anim/grow_fade_in_center</item>
        <item name="android:activityCloseExitAnimation">@anim/shrink_fade_out_center</item>
        <item name="android:wallpaperIntraCloseExitAnimation">@anim/shrink_fade_out_center</item>
    </style>
    <style name="TransparentPopUpActivity" parent="@style/PopUpActivity">
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="TranslucentPopUpActivity" parent="@*android:style/Theme.Translucent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="TranslucentPopUpActivity.Dim" parent="@style/TranslucentPopUpActivity">
        <item name="android:windowBackground">@*android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="snippet_main_layout">
        <item name="android:paddingLeft">15.0dip</item>
        <item name="android:paddingTop">8.0dip</item>
        <item name="android:paddingRight">15.0dip</item>
        <item name="android:paddingBottom">15.0dip</item>
    </style>
    <style name="pop_up_base_layout">
        <item name="android:layout_gravity">bottom|center</item>
        <item name="android:paddingLeft">20.0dip</item>
        <item name="android:paddingTop">20.0dip</item>
        <item name="android:paddingRight">20.0dip</item>
        <item name="android:paddingBottom">0.0dip</item>
    </style>
    <style name="header">
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="search_header_text" parent="@style/textsmall.Bold">
        <item name="android:layout_marginLeft">5.0dip</item>
        <item name="android:layout_marginRight">5.0dip</item>
    </style>
    <style name="NewButtonBar">
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">4.0dip</item>
        <item name="android:paddingTop">5.0dip</item>
        <item name="android:paddingRight">4.0dip</item>
        <item name="android:paddingBottom">1.0dip</item>
    </style>
    <style name="dialog_layout">
        <item name="android:layout_centerInParent">true</item>
        <item name="landWidthWeightMin">0.4</item>
        <item name="landWidthWeightMax">0.4</item>
        <item name="portWidthWeightMin">0.55</item>
        <item name="portWidthWeightMax">0.6</item>
    </style>
</resources>
